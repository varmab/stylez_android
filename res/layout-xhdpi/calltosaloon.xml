<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
     
      <LinearLayout
          android:layout_height="150dp"
          android:layout_width="250dp"
          android:orientation="vertical"
          android:background="#ffffff"> 
       
          <LinearLayout
              
              android:layout_height="100dp"
              android:layout_width="fill_parent"
              android:layout_gravity="center_horizontal"
              android:orientation="vertical">
           
           
              
              <TextView 
                  android:id="@+id/text"
                  android:textSize="18dp"
                  android:textColor="#000000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="StyleZ"
                  android:textStyle="bold"
                    android:layout_marginTop="15dp"
                  android:layout_gravity="center_horizontal"/> 
                  <TextView
                  android:id="@+id/tv_messagedisplay"    
                  android:layout_marginTop="5dp"
                  android:textSize="14dp"
                  android:textColor="#000000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center"
                  android:text="Do you want to call this"/>
                  
                  <TextView
                  android:id="@+id/txtviewsaloonnumber"    
                  android:layout_marginTop="5dp"
                  android:textSize="14dp"
                  android:textColor="#000000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center"
                  android:text="6705-438-54398"/> 
                  
                  
                   </LinearLayout>
                  
              <LinearLayout
              android:layout_marginTop="0dp"    
              android:layout_width="fill_parent"
              android:layout_height="2dp"
              android:background="#dcdcdc"/>  
              
             <LinearLayout
                  android:layout_marginTop="0dp"
                  android:orientation="horizontal" 
                  android:layout_height="40dp"
                  android:id="@+id/ok"
                  android:layout_width="fill_parent"
                  android:weightSum="1">
          
                  <TextView 
                      android:id="@+id/txtviewcancel"
                      android:textColor="#007aff"
                      android:textSize="18dp"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_weight="0.48"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:text="Cancel"
                      
                     
                     />
                  
                   <LinearLayout
                     android:layout_marginTop="0dp"    
                     android:layout_width="2dp"
                     android:layout_weight="0.002"
                     android:layout_height="fill_parent"
                     android:background="#dcdcdc"/>
                   <TextView 
                       android:id="@+id/txtviewok"
                      android:textColor="#007aff"
                      android:textSize="18dp"
                      android:textStyle="bold"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="0.48"
                      android:gravity="center"
                      android:text="OK"
                      
                     
                     />
                  

      </LinearLayout>
      
              
    </LinearLayout>
    </LinearLayout>

