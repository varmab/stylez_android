<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
   
                 <RelativeLayout 
                     android:id="@+id/rel_gridviewitem"
                     android:layout_height="fill_parent"
                     android:layout_width="fill_parent"
                     android:background="@drawable/blackbg"
                     android:visibility="visible">
                     
                     	<LinearLayout 
							        android:id="@+id/ll_tab"
							        android:layout_width="fill_parent"
							        android:layout_height="wrap_content"
							        android:layout_alignParentBottom="true"
							        android:weightSum="1"
							        android:orientation="horizontal"
							        android:background="@drawable/footer_bg">
							
							        <ImageView
							            android:id="@+id/imgviewhomeoff"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							            android:layout_gravity="center"
							            android:layout_weight="0.25"
							            android:src="@drawable/home_off" />
							        
							        <ImageView
							            android:id="@+id/imgviewhomeon"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							            android:layout_gravity="center"
							            android:layout_weight="0.25"
							            android:src="@drawable/home_on"
							            android:visibility="gone" />
							            
							         <ImageView 
							              android:id="@+id/imgviewhearttaboff"
							              android:layout_weight="0.25"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							             android:layout_gravity="center"
							            android:src="@drawable/heart_tab_off"/>
							         
							         <ImageView 
							              android:id="@+id/imgviewhearttabon"
							              android:layout_weight="0.25"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							             android:layout_gravity="center"
							            android:src="@drawable/heart_tab_on"
							            android:visibility="gone"/>
							         
							          <ImageView 
							              android:id="@+id/imgviewupdotaboff"
							              android:layout_weight="0.25"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							             android:layout_gravity="center"
							            android:src="@drawable/updo_tab_off"/>
							          
							          <ImageView 
							              android:id="@+id/imgviewupdotabon"
							              android:layout_weight="0.25"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							             android:layout_gravity="center"
							            android:src="@drawable/updo_tab_on"
							            android:visibility="gone"/>
							          
							           <ImageView 
							              android:id="@+id/imgviewmenoff"
							              android:layout_weight="0.25"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							             android:layout_gravity="center"
							            android:src="@drawable/men_off"/>
							           
							           <ImageView 
							              android:id="@+id/imgviewmenon"
							              android:layout_weight="0.25"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							             android:layout_gravity="center"
							            android:src="@drawable/men_on"
							            android:visibility="gone"/>
							        
							    </LinearLayout>
                     
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_above="@+id/ll_tab"
                        android:layout_below="@+id/rel_navbar"
                        android:background="#ffffff" >
							     
							     <RelativeLayout
						                android:id="@+id/rel_text"
						                android:layout_width="fill_parent"
						                android:layout_height="wrap_content"
						                android:background="@drawable/tran_big" 
						                 android:layout_above="@+id/horizontalListview">
						                
						                 <ImageView
						                    android:id="@+id/imgviewhearton"
						                    android:layout_width="wrap_content"
						                    android:layout_height="wrap_content"
						                    android:layout_alignParentRight="true"
						                   android:layout_centerHorizontal="true"
						                    android:layout_marginRight="10dp"
						                    android:background="@drawable/hearton"
						                    android:visibility="gone" />
						
						                 <TextView
						                     android:id="@+id/txtviewhairconstruction"
						                     android:layout_width="wrap_content"
						                     android:layout_height="wrap_content"
						                     android:layout_alignParentLeft="true"
						                     android:layout_centerVertical="true"
						                     android:layout_marginLeft="10dp"
						                     android:text="HairConstruction.us"
						                     android:textSize="19dp"
						                     android:textColor="#ffffff" />
						
						                 <ImageView
						                     android:id="@+id/imgviewheartoff"
						                     android:layout_width="wrap_content"
						                     android:layout_height="wrap_content"
						                     android:layout_alignParentRight="true"
						                    android:layout_centerHorizontal="true"
						                     android:layout_marginRight="10dp"
						                     android:background="@drawable/heartoff" />
						           
						            </RelativeLayout>
						            
							     <RelativeLayout 
							         android:layout_height="match_parent"
							         android:layout_width="fill_parent"
							       		
									 android:background="@drawable/bg_trns"
						
							         android:layout_above="@+id/rel_text">
						                 
							         <RelativeLayout
							             android:id="@+id/rel_bg_img"
							             android:layout_width="fill_parent"
							             android:layout_height="fill_parent" 
							            >
									        
									        <ImageView
									            android:id="@+id/imgviewbgimg"
									            android:layout_width="fill_parent"
									            android:layout_height="fill_parent"
									            android:scaleType="centerCrop" />
									        
									        <ImageView
									            android:id="@+id/imgviewbgtrans"
									            android:layout_width="fill_parent"
									            android:layout_height="fill_parent"
									            android:background="@drawable/bg_trns" />
									
									        <TextView 
									            android:id="@+id/txtviewstylename"
									            android:layout_width="fill_parent"
									            android:layout_height="wrap_content"
									            android:layout_marginTop="40dp"
									            android:layout_marginLeft="10dp"
									            android:textSize="40dp"
									            android:textColor="#ffffff"
									            />
									        
									    </RelativeLayout>
							         
							          <RelativeLayout
							              android:layout_width="fill_parent"
							              android:layout_height="wrap_content"
							              android:layout_margin="10dp" >
							           
							            <ImageView
							                android:id="@+id/imgviewshare"
							                android:layout_width="wrap_content"
							                android:layout_height="wrap_content"
							                android:layout_alignParentBottom="true"
							                android:layout_alignParentLeft="true"
							                android:background="@drawable/share_btn"
							                android:paddingBottom="10dp" />

							            <ImageView
							                android:id="@+id/imgviewgetit"
							                android:layout_width="wrap_content"
							                android:layout_height="wrap_content"
							                android:layout_alignParentBottom="true"
							                android:layout_alignParentRight="true"
							                android:background="@drawable/getit_btn" />
							
							        </RelativeLayout>  
							        </RelativeLayout>

							     <com.stylez.thirdpartyTool.HorizontalListView
							         android:id="@+id/horizontalListview"
							         android:layout_width="fill_parent"
							         android:layout_height="112dp"
							         android:layout_alignParentBottom="true"
							         android:layout_alignParentLeft="true"
							          >
							     </com.stylez.thirdpartyTool.HorizontalListView>

							     </RelativeLayout>
                     
							     <RelativeLayout 
				      android:id="@+id/rel_navbar"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:background="@drawable/navbar"
				       >
				        
				        <ImageView 
				            android:id="@+id/imgviewstylez"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:background="@drawable/logo_small"
				            android:layout_centerInParent="true"/>
				        
				        <ImageView 
				            android:id="@+id/imgviewback"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:background="@drawable/back"
				            android:layout_alignParentLeft="true"
				            android:layout_marginLeft="5dp"
				            android:layout_centerInParent="true"/>
				        
				    </RelativeLayout>
							     
                 </RelativeLayout>
                 
                     <RelativeLayout
                         android:id="@+id/rel_share"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent"
                         android:background="@drawable/transprant_bg"
                         android:visibility="gone" >
                
    <TextView
        android:id="@+id/txtviewsharewith"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
     	 android:gravity="center"
   		android:layout_marginTop="150dp"
        android:text="Share With"
        android:textColor="#ffffff"
        android:textSize="37dp" />
    
    <ImageView 
            android:id="@+id/imgviewback1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="27dp"
           android:layout_centerHorizontal="true"/>
    
    
     <LinearLayout 
        android:id="@+id/ll_share"
        android:layout_below="@+id/txtviewsharewith"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
     	android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgviewfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           
            android:background="@drawable/facebook_off" />
        
         <ImageView
            android:id="@+id/imgviewtwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/twitter_off" />
        
          <ImageView
            android:id="@+id/imgviewpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
              android:layout_marginLeft="10dp"
            android:background="@drawable/pinterest_off" />
        
           <ImageView
            android:id="@+id/imgviewinst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
              android:layout_marginLeft="10dp"
            android:background="@drawable/instagram_off" />
        
            <ImageView
            android:id="@+id/imgviewgmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
              android:layout_marginLeft="10dp"
           
            android:background="@drawable/mail_off" />
        
            </LinearLayout>

     <ImageView
         android:id="@+id/imgviewsharebtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/ll_share"
         android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
         android:src="@drawable/share" />
    
    </RelativeLayout>

                     <RelativeLayout
							     android:layout_width="fill_parent"
							     android:layout_height="wrap_content"
							    android:id="@+id/rel_hairconstruction"
							    android:visibility="gone">
     
                         <RelativeLayout 
				      	android:id="@+id/rel_navbar"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:background="@drawable/navbar"
				        android:layout_alignParentTop="true" >
				        
				        
				        <ImageView 
				            android:id="@+id/imgviewback2"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:background="@drawable/back"
				            android:layout_alignParentLeft="true"
				            android:layout_marginLeft="5dp"
				            android:layout_centerInParent="true"/>
				        
				    </RelativeLayout>
                         
                         <WebView 
                             android:id="@+id/webview"
                             android:layout_below="@+id/rel_navbar"
                             android:layout_width="fill_parent"
                             android:layout_height="fill_parent"/>
                         
							           
     
                         </RelativeLayout>
                     
                     
          </RelativeLayout>